<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.drinkssu.yourvoicealarm" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.drinkssu.yourvoicealarm.net1"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.drinkssu.yourvoicealarm.net2"
            android:label="@string/title_activity_main_activity2" >
        </activity>

        <!-- ksm layout -->
        <receiver android:name="com.drinkssu.yourvoicealarm.AlarmReceive" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <activity android:name="com.drinkssu.yourvoicealarm.OffAlarm" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.drinkssu.yourvoicealarm.alarmactivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.drinkssu.yourvoicealarm.create_alarm_activity"
            android:label="@string/title_activity_create_alarm_activity" >
        </activity>
        <activity
            android:name="com.drinkssu.yourvoicealarm.RecordVoice"
            android:label="@string/title_activity_record_voice" >
        </activity>
        <activity android:name=".Main_alarm">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
